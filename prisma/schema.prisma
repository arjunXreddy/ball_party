generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Refral {
  id              String           @id @default(cuid())
  code            String           @unique
  count           Int              @default(0)
  userfromrefrals userfromrefral[]
}

model User {
  id             String  @id @default(cuid())
  name           String
  email          String  @unique
  phoneNo        String  @unique
  fromrefralcode Boolean @default(false)

  userfromrefrals userfromrefral[]
}

model userfromrefral {
  id           String @id @default(cuid())
  user         User   @relation(fields: [userId], references: [id])
  userId       String
  refralcode   Refral @relation(fields: [refralcodeId], references: [id])
  refralcodeId String
}

model freeUser {
  id      String @id @default(cuid())
  name    String
  email   String @unique
  phoneNo String @unique
}

model PendingUser {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  phoneNo   String   @unique
  createdAt DateTime @default(now())
}
